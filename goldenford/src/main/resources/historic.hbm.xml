<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.iticbcn.hibernate.models.Historic" table="Historics">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property column="data_inici" name="data_inici" not-null = "true" />
        <property column="data_fi" name="data_fi" not-null = "true" />
        <property column="comentaris" name="comentaris" not-null = "true" />
    </class>
</hibernate-mapping>